<div class="page-header">
  <h1>
    Artworks
    <a href="/artworks/new" class="btn btn-lg btn-success">New Artwork</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Maker</th>
        <th>Medium</th>
        <th>Actions</th>
      </tr>

      <% @artworks.each do |artwork| %>
      <tr>
        <td><%= artwork.title %></td>
        <td><%= artwork.date %></td>
        <td><%= artwork.maker %></td>
        <td><%= artwork.medium %></td>
        <td>
          <a href="/artworks/<%= artwork.id %>" class="btn btn-primary">Engage</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
