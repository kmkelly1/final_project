<div class="page-header">
  <h3>Artwork #<%= @artwork.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @artwork.title %></dd>

      <dt>Date</dt>
      <dd><%= @artwork.date %></dd>

      <dt>Maker</dt>
      <dd><%= @artwork.maker %></dd>

      <dt>Medium</dt>
      <dd><%= @artwork.medium %></dd>

    </dl>
    <div class="col-md-12">
    <form action="/create_engagement" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        

        <input type="hidden" name="user_id" id="user_id" class="form-control" value="<%= current_user.id %>">
      </div>

      <!-- Label and input for artwork_id -->
      <div class="form-group">
        <input type="hidden" name="artwork_id" id="artwork_id" class="form-control" value="<%= @artwork.id %>">
      </div>

      <!-- Label and input for notes -->
      <div class="form-group">
        <label for="notes" class="control-label">
          Notes
        </label>

        <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @engagement.notes %></textarea>
      </div>

      <button class="btn btn-success">
        Create Engagement
      </button>
      or
      <a href="/engagements">Cancel</a>
    </form>
  </div>
    
  </div>
</div>
