<!-- Validation failure messages -->
<% if @response.errors.any? %>
  <% @response.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Response</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_response" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for engagement_id -->
      <div class="form-group">
        <label for="engagement_id" class="control-label">
          Engagement
        </label>

        <input type="text" id="engagement_id" name="engagement_id" placeholder="Engagement" class="form-control" value="<%= @response.engagement_id %>">
      </div>

      <!-- Label and input for feeling_id -->
      <div class="form-group">
        <label for="feeling_id" class="control-label">
          Feeling
        </label>

        <input type="text" id="feeling_id" name="feeling_id" placeholder="Feeling" class="form-control" value="<%= @response.feeling_id %>">
      </div>

      <button class="btn btn-success">
        Create Response
      </button>
      or
      <a href="/responses">Cancel</a>
    </form>
  </div>
</div>
